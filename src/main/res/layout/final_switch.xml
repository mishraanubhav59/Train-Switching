<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/upper_layout">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="90dp"

            android:layout_weight="0.9"
            android:gravity="center"
            android:id="@+id/card3">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                >
               <ImageView
                   android:layout_weight="0.2"
                   android:layout_width="0dp"
                   android:layout_gravity="center_vertical"
                   android:layout_height="50dp"

                   android:src="@drawable/tick_green"/>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"

                android:text="Your train has been switched ! :"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#4caf50"

                />
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details :"
        android:id="@+id/detail"
        android:layout_below="@+id/upper_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textStyle="bold"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginTop="200dp">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:id="@+id/card2">



            <LinearLayout
                android:layout_width="fill_parent"

                android:weightSum="1"

                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/train_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:layout_weight="0.5"
                    android:textSize="19sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#3f6879"
                    android:text="  Train Name :" />


                <TextView
                    android:id="@+id/tn"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#819ca9"
                    android:text=" Name "
                    android:paddingBottom="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"

                android:weightSum="1"

                android:layout_height="fill_parent"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/pnr_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:layout_weight="0.5"
                    android:textSize="19sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#3f6879"
                    android:text="  PNR  :" />


                <TextView
                    android:id="@+id/pnr"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#819ca9"
                    android:text=" 90123ASDN89E "
                    android:paddingBottom="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"

                android:weightSum="1"

                android:layout_height="fill_parent"
                android:layout_marginTop="100dp">

                <TextView
                    android:id="@+id/seat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:layout_weight="0.5"
                    android:textSize="19sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#3f6879"
                    android:text="   Seat No :" />


                <TextView
                    android:id="@+id/seat_no"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#819ca9"
                    android:text="  COACH R 2 "
                    android:paddingBottom="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"

                android:weightSum="1"

                android:layout_height="fill_parent"
                android:layout_marginTop="150dp">

                <TextView
                    android:id="@+id/passenger_dest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:layout_weight="0.5"
                    android:textSize="19sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#3f6879"
                    android:text="   Destination :" />


                <TextView
                    android:id="@+id/pnr_d"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#819ca9"
                    android:text="  RamaKrishna "
                    android:paddingBottom="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"

                android:weightSum="1"

                android:layout_height="fill_parent"
                android:layout_marginTop="200dp">

                <TextView
                    android:id="@+id/date_journey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:layout_weight="0.5"
                    android:textSize="19sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#3f6879"
                    android:text="  Date Of Journey:" />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#819ca9"
                    android:text="  12-oct-2017 "
                    android:paddingBottom="15dp"/>
            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>